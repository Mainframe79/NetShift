<Window x:Class="NetShift.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About NetShift" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="Black">

    <Window.Resources>
        <!-- Your existing font registrations -->
        <FontFamily x:Key="OrbitronBold">/Assets/#Orbitron Bold</FontFamily>
        <FontFamily x:Key="OrbitronRegular">/Assets/#Orbitron Regular</FontFamily>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation 
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.4"
                        AccelerationRatio="0.3" 
                        DecelerationRatio="0.7" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid  Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <!-- Logo Image -->
            <Image x:Name="ZentrixLogo"
                   Width="260"
                   Height="150"
                   Margin="20,0,0,20"
                   Source="/Assets/ZentrixLabs_Logo.png" />
            <StackPanel Orientation ="Horizontal" HorizontalAlignment="Center">
                <!-- Brand Text -->
                <TextBlock Text="Zentrix"
                       FontFamily="{StaticResource OrbitronBold}"
                       FontSize="26"
                       Foreground="#00FFFF"
                       TextAlignment="Center" />

                <TextBlock Text="Labs"
                       FontFamily="{StaticResource OrbitronRegular}"
                       FontSize="26"
                       Foreground="#FF007F"
                       TextAlignment="Center"
                       Margin="0,0,0,0"/>
            </StackPanel>


            <!-- App Version -->
            <TextBlock Text="NetShift v1.0"
                       FontWeight="Bold"
                       FontSize="16"
                       Foreground="{DynamicResource MaterialDesignBody}"
                       TextAlignment="Center"
                       Margin="0,10,0,0" />

            <!-- Website Link -->
            <TextBlock Text="https://zentrixlabs.net"
                       Foreground="#00FFFF"
                       FontSize="14"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       TextAlignment="Center"
                       Margin="0,15,0,0"
                       MouseDown="ZentrixLink_Click"/>

            <!-- Copyright -->
            <TextBlock Text="© 2025 ZentrixLabs. All rights reserved."
                       Foreground="Gray"
                       FontSize="12"
                       TextAlignment="Center"
                       Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
